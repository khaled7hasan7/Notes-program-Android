<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#f3e9df"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/ed_task"
            android:layout_width="280dp"
            android:layout_height="57dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:hint="ADD tasks"
            android:padding="10dp"

            />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            android:drawableBottom="@drawable/add_icons"
            android:text="ADD"
            android:textSize="24sp"
            android:backgroundTint="#f3e9df"

            />


</LinearLayout>


    <ListView
        android:id="@+id/tasksListView"
        android:layout_width="match_parent"
        android:layout_height="541dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"

        >


    </ListView>


    <Button
        android:id="@+id/taskisdone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/donetask"
        android:backgroundTint="#f3e9df"

        />


</LinearLayout>